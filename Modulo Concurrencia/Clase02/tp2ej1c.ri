    EnviarMensaje(idR4,r4)
    EnviarMensaje(idR5,r5)
    EnviarMensaje(idR6,r6)
    receptor(diff,idR1,idR2,idR3,idR4,idR5,idR6)

    Informar(diff)  
  fin
