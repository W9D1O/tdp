programa tp2ej1c

procesos

  proceso juntarFlores(ES cantidad: numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cantidad:= cantidad + 1 
  fin
  
  proceso recorre(ES cantidad: numero)
  comenzar
    repetir 9
      juntarFlores(cantidad)
      mover
    juntarFlores(cantidad)
  fin  

  proceso mensajes(E canF: numero)
  variables
    id:numero
  comenzar
    RecibirMensaje(id,fiscalizador)
    EnviarMensaje(id,fiscalizador)
    EnviarMensaje(canF,fiscalizador)
  fin
  
  proceso obtenerMayores(E num:numero ES numMayor1:numero ES numMayor2:numero)
  comenzar
    si(num > numMayor1)
      numMayor1:= num
    sino
      si(num > numMayor2)
        numMayor2:= num
  fin
  proceso obtenerDiff(ES diff: numero E cf1:numero E cf2:numero E cf3:numero E cf4:numero E cf5:numero E cf6:numero)
  variables
    max1,max2:numero
  comenzar
    max1:= -1
    max2:= -1
    obtenerMayores(cf1,max1,max2)
    obtenerMayores(cf2,max1,max2)
    obtenerMayores(cf3,max1,max2)
    obtenerMayores(cf4,max1,max2)
    obtenerMayores(cf5,max1,max2)
    obtenerMayores(cf6,max1,max2)
    diff:= max1 - max2      
  fin
    
  proceso receptor(ES diff:numero E id1:numero E id2:numero E id3:numero E id4:numero E id5:numero E id6:numero)
  variables
    canFR1,canFR2,canFR3:numero
    canFR4,canFR5,canFR6:numero
    id:numero  
  comenzar
    repetir 6
      RecibirMensaje(id,*)
      si(id = id1)
        RecibirMensaje(canFR1,r1)
      sino
        si(id = id2)
          RecibirMensaje(canFR2,r2)
        sino
          si(id = id3)
            RecibirMensaje(canFR3,r3)
          sino
            si(id = id4)
              RecibirMensaje(canFR4,r4)
            sino
              si(id = id5)
                RecibirMensaje(canFR5,r5)
              sino
                si(id = id6)
                  RecibirMensaje(canFR6,r6)
    obtenerDiff(diff,canFR1,canFR2,canFR3,canFR4,canFR5,canFR6)  
  fin
  
